{
  "name": "soft-sticky",
  "version": "0.1.0",
  "description": "Sticky-notes-like PDF annotator with handwriting feel (starter)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "you",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "dependencies": {
    "fabric": "^5.3.0",
    "pdfjs-dist": "^3.6.172"
  },
  "build": {
    "appId": "com.example.softsticky",
    "productName": "SoftSticky",
    "files": [
      "**/*"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": false
    },
    "win": {
      "target": ["nsis"]
    }
  }
}
